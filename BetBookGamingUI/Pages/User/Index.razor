@code {

    Game[]? games;
    int week;
    SeasonType season;
    private readonly PeriodicTimer _timer = new(TimeSpan.FromMinutes(5));
    List<BetModelNew> bets = new();
    Dictionary<string, Game> gamesAndWinnersForPointSpread = new();
    Dictionary<string, Game> gamesAndWinnersForMoneyline = new();
    Dictionary<string, Game> gamesAndWinnersForOverUnder = new();

    protected override async Task OnInitializedAsync()
    {
        games = await gameService.GetGamesByWeek(SeasonType.PRE, 2);
        season = DateTime.Now.CalculateSeason();
        week = season.CalculateWeek(DateTime.Now);
    }

    private void SelectWinnerAndGameForPointSpread(string winner, Game game)
    {
        if (gamesAndWinnersForPointSpread.ContainsKey(winner))
            return;

        gamesAndWinnersForPointSpread.Add(winner, game);
    }

    private void RemoveWinnerAndGameForPointSpread(string winner, Game game)
    {
        if (!gamesAndWinnersForPointSpread.ContainsKey(winner))
            return;

        gamesAndWinnersForPointSpread.Remove(winner);
    }

    private void SelectWinnerAndGameForMoneyline(string winner, Game game)
    {
        if (gamesAndWinnersForPointSpread.ContainsKey(winner))
            return;

        gamesAndWinnersForMoneyline.Add(winner, game);
    }

    private void RemoveWinnerAndGameForMoneyline(string winner)
    {
        if (!gamesAndWinnersForMoneyline.ContainsKey(winner))
            return;

        gamesAndWinnersForMoneyline.Remove(winner);
    }



    //protected override async Task OnAfterRenderAsync(bool firstRender)
    //{
    //    if (firstRender) await StartGameUpdateLoop();
    //}

    private async Task StartGameUpdateLoop()
    {
        int index = 1;

        while (await _timer.WaitForNextTickAsync())
        {
            season = DateTime.Now.CalculateSeason();
            week = season.CalculateWeek(DateTime.Now);
            games = await gameService.GetGamesByWeek(season, week);
            Console.WriteLine($"Timer trigger count: {index}");
            index++;
        }
    }

    private string GetPointSpreadForAwayTeam(float? pointSpread)
    {
        if (pointSpread > 0) return $"- {pointSpread}";
        if (pointSpread == 0) return "0";
        return $"+ {pointSpread * -1}";
    }

    private string GetPointSpreadForHomeTeam(float? pointSpread)
    {
        if (pointSpread > 0) return $"+ {pointSpread}";
        if (pointSpread == 0) return "0";
        return $"- {pointSpread?.ToString().Trim('-')}";
    }

    private string GetMoneyLine(int? moneyline)
    {
        if (moneyline >= 0) return $"+ {moneyline}";
        return $"- {moneyline?.ToString().Trim('-')}";
    }

}
